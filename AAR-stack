version: "3.9"

services:
  gluetun:
    image: qmcgaw/gluetun:latest
    container_name: gluetun-gluetun
    cap_add:
      - NET_ADMIN
    devices:
      - /dev/net/tun:/dev/net/tun
    ports:
      - 8080:8080        # qBittorrent WebUI
      - 7878:7878        # Radarr WebUI
      - 8989:8989        # Sonarr WebUI
      - 9117:9117        # Jackett WebUI
      - 9696:9696        # Prowlarr WebUI
      - 8096:8096        # Jellyfin HTTP
      - 8920:8920        # Jellyfin HTTPS
      - 6969:6969        # Whisparr
      - 7575:7575        # Homarr
      - 8686:8686        # Lidarr
    volumes:
      - /gluetun:/gluetun
    environment:
      - VPN_SERVICE_PROVIDER=protonvpn
      - VPN_TYPE=openvpn
      - OPENVPN_USER=BHufUufI2tcoWu2Z
      - OPENVPN_PASSWORD=OTWAJj3ElhwlKVumIECFpCEXD64vZh9Q
      - SERVER_COUNTRIES=UNITED STATES
      - TZ=America/Los_Angeles
      - LOCAL_NETWORK=10.0.0.0/24
    networks:
      - vpn-net
    restart: unless-stopped

  qbittorrent:
    image: lscr.io/linuxserver/qbittorrent:latest
    container_name: qbittorrent-gluetun
    network_mode: service:gluetun
    depends_on:
      - gluetun
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=America/Los_Angeles
      - WEBUI_PORT=8080
    volumes:
      - /srv/docker/qbittorrent/config:/config
